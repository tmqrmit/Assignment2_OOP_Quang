<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="app.controller.LoginController"
      alignment="CENTER" spacing="20" prefWidth="400" prefHeight="300">

    <!-- Title -->
    <Label text="Login Page" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Username and Password Fields -->
    <TextField fx:id="usernameField" promptText="Enter your username" />
    <PasswordField fx:id="passwordField" promptText="Enter your password" />

    <!-- Login Button -->
    <Button text="Login" onAction="#handleLogin" />

    <!-- Guest Link-->
    <Hyperlink fx:id="guestLink" text="Continue as Guest"/>

    <!-- Status Label -->
    <Label fx:id="statusLabel" style="-fx-text-fill: red;" />
</VBox>